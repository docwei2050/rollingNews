<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/home_iv_headline"
        android:layout_width="45dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/home_tv_headline_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/home_iv_headline"
        android:gravity="center_vertical|left"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="真的来了真的来了真的来了真的来了真的来了了真的来了真的来了了真的来了真的来了"/>

    <TextView
        android:id="@+id/home_tv_headline_next"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/home_tv_headline_prev"
        android:layout_toLeftOf="@+id/home_iv_headline"
        android:gravity="center_vertical|left"
        android:paddingBottom="5dp"
        android:singleLine="true"
        android:text="科技来了黑科技科技来了黑科技科技来了黑科技科技来了黑科技"/>

</RelativeLayout>